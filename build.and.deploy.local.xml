<?xml version="1.0" encoding="UTF-8"?>
<project name="shared" default="deploy">
	
	<import file="build.xml" />
		
	<target name="deploy" depends="package" >
		<copy file="${releaseDir}/${packageName}" tofile="${deployWebAppDir}/${packageName}"/>
		<copy file="${releaseDir}/${packageName}" tofile="${deployCrankCoreDir}/${packageName}"/>
		
		<tstamp>
			<format property="current.time" pattern="yyyy-MM-dd hh:mm:ss aa" />
		</tstamp>

		<echo message="${current.time}" />
	</target>
	
</project>